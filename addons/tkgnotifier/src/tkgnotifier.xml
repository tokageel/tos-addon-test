        <picture name="icon" rect="0 0 50 50" margin="15 0 0 0" layout_gravity="left center" hittest="true" stretch="true"/>
        <richtext name="message" rect="0 0 270 60" margin="80 0 0 0" layout_gravity="left center"
            fixwidth="true" resizebytext="false" textalign="left center"
            fontname="brown_18" caption="" LBtnUpScp="TKGNOTIFIER_FRAME_ON_CLICKED"/>
    </controls>
</uiframe>
