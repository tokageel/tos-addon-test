<?xml version="1.0" encoding="UTF-8"?>
<uiframe name="tkgnotifier" x="0" y="0" width="365" height="80" create="open">
    <option closebutton="false" visible="false"/>
    <draw drawtitlebar="false" drawframe="true"/>
    <layer layerlevel="20"/>
    <input hittest="true"/>
    <skin frameskin="textballoon"/>
    <script OpenScp="TKGNOTIFIER_FRAME_OPEN" CloseScp="TKGNOTIFIER_FRAME_CLOSE"/>
